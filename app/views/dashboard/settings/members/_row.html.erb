<tr class="border-b dark:border-gray-700">
    <td class="px-4 py-3">
        <%= member.user&.email || member.invite_email %>
        <% if member.user.present? && member.user_id == current_user.id %>
            <em>(you)</em>
        <% end %>
    </td>
    <td class="px-4 py-3"><%= member.access_level.titleize %></td>
    <td class="px-4 py-3">
        <% if member.pending? %>
            <span class="px-2 py-1 text-xs font-semibold text-yellow-800 bg-yellow-100 rounded-full dark:bg-yellow-900 dark:text-yellow-300">
                Pending Invitation
            </span>
        <% else %>
            <span class="px-2 py-1 text-xs font-semibold text-green-800 bg-green-100 rounded-full dark:bg-green-900 dark:text-green-300">
                Active
            </span>
        <% end %>
    </td>
    <td class="px-4 py-3 flex items-center justify-end">
        <button
            id="member-<%= member.id %>-dropdown-button"
            data-dropdown-toggle="member__<%= member.id %>"
            class="inline-flex items-center p-0.5 text-sm font-medium text-center text-gray-500 hover:text-gray-800 rounded-lg focus:outline-none dark:text-gray-400 dark:hover:text-gray-100"
            type="button"
        >
            <svg class="w-5 h-5" aria-hidden="true" fill="currentColor" viewbox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path d="M6 10a2 2 0 11-4 0 2 2 0 014 0zM12 10a2 2 0 11-4 0 2 2 0 014 0zM16 12a2 2 0 100-4 2 2 0 000 4z" />
            </svg>
        </button>
        <div id="member__<%= member.id %>" class="hidden z-10 w-44 bg-white rounded divide-y divide-gray-100 shadow dark:bg-gray-700 dark:divide-gray-600">
            <ul class="py-1 text-sm text-gray-700 dark:text-gray-200" aria-labelledby="member-<%= member.id %>-dropdown-button">
                <li>
                    <%= link_to edit_settings_member_path(current_account, member), class: "block py-2 px-4 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white" do %>
                        Edit
                    <% end %>
                </li>
            </ul>
            <div class="py-1">
                <%= link_to settings_member_url(current_account, member), method: :delete, data: { confirm: "Are you sure?" }, class: "block py-2 px-4 text-sm text-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white" do %>
                    Remove
                <% end %>
            </div>
        </div>
    </td>
</tr>