<div class="relative flex flex-col flex-1 overflow-y-auto overflow-x-hidden">
  <main>
    <div class="px-4 sm:px-6 lg:px-8 py-8 w-full max-w-9xl mx-auto">

      <!-- Header -->
      <div class="sm:flex sm:justify-between sm:items-center mb-8">
        <div class="mb-4 sm:mb-0">
          <h1 class="text-2xl md:text-3xl text-gray-800 dark:text-gray-100 font-bold">Notifications</h1>
        </div>
        <div class="grid grid-flow-col sm:auto-cols-max justify-start sm:justify-end gap-2">
          <%= button_to "Mark All as Read", mark_all_as_read_notifications_path,
                        method: :patch,
                        class: "btn bg-gray-900 text-gray-100 hover:bg-gray-800 dark:bg-gray-100 dark:text-gray-800 dark:hover:bg-white",
                        disabled: @unread_count == 0 %>
        </div>
      </div>

      <!-- Notifications -->
      <div class="bg-white dark:bg-gray-800 shadow-sm rounded-xl">

        <!-- Header -->
        <header class="px-5 py-4 border-b border-gray-100 dark:border-gray-700/60">
          <h2 class="font-semibold text-gray-800 dark:text-gray-100">
            All Notifications
            <% if @unread_count > 0 %>
              <span class="inline-flex items-center justify-center px-2 py-1 mr-2 text-xs font-bold leading-none text-red-100 bg-red-600 rounded-full">
                <%= @unread_count %>
              </span>
            <% end %>
          </h2>
        </header>

        <!-- Content -->
        <div class="p-3">
          <% if @notifications.any? %>
            <div class="divide-y divide-gray-100 dark:divide-gray-700/60">
              <% @notifications.each do |notification| %>
                <div class="flex items-start space-x-3 py-3 px-2 hover:bg-gray-50 dark:hover:bg-gray-700/30 rounded-lg <%= 'bg-blue-50 dark:bg-blue-900/20' if notification.unread? %>">

                  <!-- Icon -->
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-gray-300 rounded-full flex items-center justify-center">
                      <% case notification.notification_type %>
                      <% when 'info' %>
                        <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
                        </svg>
                      <% when 'warning' %>
                        <svg class="w-4 h-4 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                        </svg>
                      <% when 'success' %>
                        <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                      <% else %>
                        <svg class="w-4 h-4 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M10 2a6 6 0 00-6 6v3.586l-.707.707A1 1 0 004 14h12a1 1 0 00.707-1.707L16 11.586V8a6 6 0 00-6-6zM10 18a3 3 0 01-3-3h6a3 3 0 01-3 3z"></path>
                        </svg>
                      <% end %>
                    </div>
                  </div>

                  <!-- Content -->
                  <div class="flex-1 min-w-0">
                    <div class="flex items-start justify-between">
                      <div>
                        <%= link_to notification_path(notification), class: "block hover:underline" do %>
                          <p class="text-sm font-medium text-gray-900 dark:text-gray-100 <%= 'font-bold' if notification.unread? %>">
                            <%= notification.title %>
                          </p>
                          <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                            <%= notification.body %>
                          </p>
                        <% end %>
                        <p class="text-xs text-gray-400 dark:text-gray-500 mt-2">
                          <%= time_ago_in_words(notification.created_at) %> ago
                        </p>
                      </div>

                      <!-- Actions -->
                      <div class="flex items-center space-x-2 ml-4">
                        <% if notification.unread? %>
                          <%= button_to "Mark Read", mark_as_read_notification_path(notification),
                                        method: :patch,
                                        remote: true,
                                        class: "text-xs text-blue-600 hover:text-blue-800" %>
                        <% else %>
                          <%= button_to "Mark Unread", mark_as_unread_notification_path(notification),
                                        method: :patch,
                                        remote: true,
                                        class: "text-xs text-gray-500 hover:text-gray-700" %>
                        <% end %>

                        <%= button_to "Delete", notification_path(notification),
                                      method: :delete,
                                      data: { confirm: "Are you sure?" },
                                      class: "text-xs text-red-600 hover:text-red-800 ml-2" %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <!-- Empty state -->
            <div class="text-center py-12">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-5 5-5-5h5v-8a1 1 0 011-1h3a1 1 0 011 1v8z" />
              </svg>
              <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">No notifications</h3>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">You're all caught up!</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </main>
</div>
