
<%= form_for member, url: form_route, method: form_method, class: "space-y-4" do |f| %>
    <div class="grid gap-4 sm:grid-cols-2 sm:gap-6">
        <div>
            <%= f.label :invite_email, "Email", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.email_field :invite_email, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500", placeholder: "jsmith@example.com", required: true, disabled: member.user.present? %>
        </div>
        <div class="w-full">
            <%= f.label :access_level, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            <%= f.select :access_level, Member::ACCESS_LEVELS.keys.map { |role| [role.capitalize, role] }, {}, class: "block w-full p-2.5 text-gray-900 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-600 focus:border-primary-600 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %>
        </div>
    </div>
    <%= f.button form_button_submit_text, class: "inline-flex items-center px-5 py-2.5 mt-4 sm:mt-6 text-sm font-medium text-center text-white bg-primary-700 rounded-lg focus:ring-4 focus:ring-primary-200 dark:focus:ring-primary-900 hover:bg-primary-800", disabled: @member.user == current_user %>
<% end %>
