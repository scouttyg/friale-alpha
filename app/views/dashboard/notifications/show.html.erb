<div class="relative flex flex-col flex-1 overflow-y-auto overflow-x-hidden">
  <main>
    <div class="px-4 sm:px-6 lg:px-8 py-8 w-full max-w-9xl mx-auto">
      <div class="mb-8">
        <%= link_to notifications_path, class: "text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300" do %>
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Notifications
        <% end %>
      </div>

      <div class="bg-white dark:bg-gray-800 shadow-sm rounded-xl">
        <header class="px-6 py-4 border-b border-gray-100 dark:border-gray-700/60">
          <div class="flex items-center justify-between">
            <h1 class="text-xl font-semibold text-gray-800 dark:text-gray-100">
              <%= @notification.title %>
            </h1>
            <div class="flex items-center space-x-3">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @notification.read? ? 'bg-green-100 text-green-800' : 'bg-blue-100 text-blue-800' %>">
                <%= @notification.read? ? 'Read' : 'Unread' %>
              </span>
              <span class="text-sm text-gray-500 dark:text-gray-400">
                <%= time_ago_in_words(@notification.created_at) %> ago
              </span>
            </div>
          </div>
        </header>

        <div class="p-6">
          <div class="prose max-w-none dark:prose-invert">
            <%= simple_format(@notification.body) %>
          </div>

          <% if @notification.data.present? %>
            <div class="mt-6 pt-6 border-t border-gray-100 dark:border-gray-700/60">
              <h3 class="text-sm font-medium text-gray-900 dark:text-gray-100 mb-3">Additional Information</h3>
              <div class="bg-gray-50 dark:bg-gray-700/50 rounded-lg p-4">
                <pre class="text-sm text-gray-700 dark:text-gray-300 whitespace-pre-wrap"><%= JSON.pretty_generate(@notification.data) %></pre>
              </div>
            </div>
          <% end %>
        </div>

        <footer class="px-6 py-4 bg-gray-50 dark:bg-gray-700/30 border-t border-gray-100 dark:border-gray-700/60 rounded-b-xl">
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <% if @notification.unread? %>
                <%= button_to "Mark as Read", mark_as_read_notification_path(@notification),
                              method: :patch,
                              class: "btn bg-blue-600 text-white hover:bg-blue-700" %>
              <% else %>
                <%= button_to "Mark as Unread", mark_as_unread_notification_path(@notification),
                              method: :patch,
                              class: "btn bg-gray-600 text-white hover:bg-gray-700" %>
              <% end %>
            </div>

            <%= button_to "Delete", notification_path(@notification),
                          method: :delete,
                          data: { confirm: "Are you sure you want to delete this notification?" },
                          class: "btn bg-red-600 text-white hover:bg-red-700" %>
          </div>
        </footer>
      </div>
    </div>
  </main>
</div>