<li class="me-2">
  <% active_classes = tab[:active] ? "active text-blue-600 border-blue-600 dark:border-blue-500 dark:text-blue-500" : "hover:text-gray-600 hover:border-gray-300 dark:hover:text-gray-300 border-transparent" %>
  <%= link_to tab[:link], class: "inline-flex items-center justify-center py-4 mr-4 border-b-2 rounded-t-lg group #{active_classes}" do %>
    <%= tab[:name] %>
  <% end %>
</li>